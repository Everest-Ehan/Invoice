# QuickBooks OAuth Configuration
QB_CLIENT_ID=your_quickbooks_client_id
QB_CLIENT_SECRET=your_quickbooks_client_secret
QB_REDIRECT_URI=https://your-app.vercel.app/api/auth/quickbooks/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://your-app.vercel.app

# OpenAI Configuration (if using AI features)
OPENAI_API_KEY=your_openai_api_key

# Environment
NODE_ENV=production

# Token Storage (optional - defaults to ./tokens.json in development)
TOKEN_FILE_PATH=./tokens.json

# Vercel KV (for production token storage)
# These will be automatically set by Vercel when you connect a KV database
KV_REST_API_URL=
KV_REST_API_TOKEN=
